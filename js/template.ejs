<div class="col-lg-6">
    <div class="card" style="">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="<%= bookImg %>" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= title %>
                    </h5>
                    <p class="card-text">Author:
                        <%= author %>
                    </p>
                    <p class="card-text"><small class="text-muted">Publisher: <%= publisher %></small></p>
                </div>
            </div>
        </div>
    </div>
</div>